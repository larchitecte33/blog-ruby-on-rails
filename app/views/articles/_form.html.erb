<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <!-- pluralize(nb, mot) : fonction qui regarde si nb est supérieur à 1
             et qui renvoie mot au pluriel ou au singulier suivant le cas
        -->
        <%= pluralize(@article.errors.count, "erreur") %> a empêché cet 
          article d'être sauvegardé :
      </h2>
      
      <ul>
        <% @article.error.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>